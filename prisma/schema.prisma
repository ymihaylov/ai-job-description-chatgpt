// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GenerationRequest {
  id Int @id @default(autoincrement())
  jobTitle String
  industry String?
  keyWords String?
  tone String?
  numWords Int?
  fullTextPrompt String
  status String
  responseText String?
}

model User {
  id Int @id @default(autoincrement())
}
